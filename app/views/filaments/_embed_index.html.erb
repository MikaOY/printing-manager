
<div class="col-4">
  <div class="container-fluid">
    <div class="row">
      <div class="col-9"><h5>My Filaments</h5></div>
      <div class="col-3">
        <button class="btn btn-success" type="button" data-toggle="collapse" data-target="#addFilament" aria-expanded="false" aria-controls="addFilament">
          Add
        </button>
      </div>
    </div>
  </div>
  <div class="collapse" id="addFilament">
    <div class="card card-body">
      <%= render "filaments/embed_new" %>
    </div>
  </div>
</div>

<div class="container first-section">
  <% if Filament.all.length == 0  %>
    <div class="center-notice">
      <h4>No filaments found</h4>
      <p>Studies have shown that printing using material leads to better results.</p>
    </div>
  <% end %>

  <% Filament.all.each do |filament| %>
    <h6><%= filament.brand %> <%= filament.material %> (<%= filament.color %>)</h6>
    <p>Spool size: <%= filament.full_weight %></p>
    <p>Added <%= filament.created_at.strftime('%H:%M | %b %d, %Y') %></p>
    <hr>
  <% end %>
</div>
