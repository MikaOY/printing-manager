
<%= form_for @job do |f| %>
  <%= f.label(:filament_id, 'Filament') %>
  <%= select_tag(:filament_id, options_for_select(Filament.all.map { |f| [f.material + ' - ' + f.color + ' - ' + f.brand, f.id] }), {include_blank: "Select filament"}) %>

  <%= f.label(:usedWeight, 'Weight Used') %>
  <%= f.number_field :usedWeight, :step => :any %>

  <%= f.label(:printer_id, 'Printer') %>
  <%= select_tag(:printer_id, options_for_select(Printer.all.map { |p| [p.name, p.id] }), {include_blank: "Select printer"}) %>

  <%= f.label(:reference, 'Reference') %>
  <%= f.text_field :reference %>

  <%= f.label(:doneTime, 'Completed') %>
  <%= f.date_field :doneTime %>

  <%= f.submit "Submit" %>
<% end %>
